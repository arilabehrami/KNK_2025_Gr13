<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.CreateDonacionetController"
            prefWidth="600" prefHeight="600">
    <VBox alignment="CENTER" spacing="15" style="-fx-background-color: #f4f4f4; -fx-padding: 20;">
        <Label text="Forma për Shtim të Donacioneve" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" />

        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <Label text="Emri i Organizatës:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
            <TextField fx:id="emriOrganizatesField" promptText="Shkruaj emrin e organizatës" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="300"/>

            <Label text="Lloji i Donatorit:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
            <ComboBox fx:id="llojiDonatoriCombo" promptText="Zgjidh llojin e donatorit" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="300"/>

            <Label text="Kontakti:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
            <TextField fx:id="kontaktiField" promptText="Shkruaj numrin e kontaktit" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="300"/>

            <Label text="Email:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
            <TextField fx:id="emailField" promptText="Shkruaj email-in (shembull@domain.com)" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="300"/>

            <Label text="Adresa:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
            <TextField fx:id="adresaField" promptText="Shkruaj adresën" GridPane.rowIndex="4" GridPane.columnIndex="1" prefWidth="300"/>

            <Label text="Data e Donacionit:" GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
            <DatePicker fx:id="dataDonacionitPicker" promptText="Zgjidh datën" GridPane.rowIndex="5" GridPane.columnIndex="1" prefWidth="300"/>

            <Label text="Shuma:" GridPane.rowIndex="6" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
            <TextField fx:id="shumaField" promptText="Shkruaj shumën (vetëm numra)" GridPane.rowIndex="6" GridPane.columnIndex="1" prefWidth="300"/>

            <Label text="Lloji i Donacionit:" GridPane.rowIndex="7" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
            <ComboBox fx:id="llojiDonacionitCombo" promptText="Zgjidh llojin e donacionit" GridPane.rowIndex="7" GridPane.columnIndex="1" prefWidth="300"/>

            <Label text="Përshkrimi:" GridPane.rowIndex="8" GridPane.columnIndex="0" style="-fx-font-size: 14px;"/>
            <TextArea fx:id="pershkrimiArea" promptText="Shkruaj përshkrimin e donacionit" prefRowCount="4" GridPane.rowIndex="8" GridPane.columnIndex="1" prefWidth="300"/>
        </GridPane>

        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
            <Button fx:id="ruajButton" text="Ruaj Donacionin" onAction="#ruajDonacionin" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20;"/>
            <Button fx:id="anuloButton" text="Anulo" onAction="#anulo" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20;"/>
        </HBox>
    </VBox>
</AnchorPane>