<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.CreateDonacionetController"
      spacing="10">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15" />
    </padding>

    <Label text="Menaxhimi i Donacioneve" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <Label text="Emri i Organizatës:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="emriOrganizatesField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Lloji Donatorit:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <ComboBox fx:id="llojiDonatoriCombo" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Kontakti:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <TextField fx:id="kontaktiField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <Label text="Email:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <TextField fx:id="emailField" GridPane.rowIndex="3" GridPane.columnIndex="1" />

        <Label text="Adresa:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
        <TextField fx:id="adresaField" GridPane.rowIndex="4" GridPane.columnIndex="1" />

        <Label text="Data Donacionit:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
        <DatePicker fx:id="dataDonacionitPicker" GridPane.rowIndex="5" GridPane.columnIndex="1" />

        <Label text="Shuma:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
        <TextField fx:id="shumaField" GridPane.rowIndex="6" GridPane.columnIndex="1" />

        <Label text="Lloji Donacionit:" GridPane.rowIndex="7" GridPane.columnIndex="0" />
        <ComboBox fx:id="llojiDonacionitCombo" GridPane.rowIndex="7" GridPane.columnIndex="1" />

        <Label text="Përshkrimi:" GridPane.rowIndex="8" GridPane.columnIndex="0" />
        <TextArea fx:id="pershkrimiArea" prefRowCount="3" GridPane.rowIndex="8" GridPane.columnIndex="1" />
    </GridPane>

    <HBox spacing="10">
        <Button text="Ruaj Donacionin" onAction="#ruajDonacionin" />
        <Button text="Përditëso Donacionin" onAction="#perditesoDonacionin" />
        <Button text="Fshij Donacionin" onAction="#largoDonacionin" />
        <Button text="Anulo" onAction="#anulo" />
    </HBox>

    <TableView fx:id="tableDonacionet" prefHeight="300">
        <columns>
            <TableColumn fx:id="colID" text="ID" prefWidth="50" />
            <TableColumn fx:id="colEmriOrganizates" text="Emri Organizatës" prefWidth="150" />
            <TableColumn fx:id="colLlojiDonatori" text="Lloji Donatorit" prefWidth="100" />
            <TableColumn fx:id="colKontakti" text="Kontakti" prefWidth="100" />
            <TableColumn fx:id="colEmail" text="Email" prefWidth="150" />
            <TableColumn fx:id="colAdresa" text="Adresa" prefWidth="150" />
            <TableColumn fx:id="colDataDonacionit" text="Data Donacionit" prefWidth="100" />
            <TableColumn fx:id="colShuma" text="Shuma" prefWidth="100" />
            <TableColumn fx:id="colLlojiDonacionit" text="Lloji Donacionit" prefWidth="100" />
            <TableColumn fx:id="colPershkrimi" text="Përshkrimi" prefWidth="200" />
        </columns>
    </TableView>

</VBox>
