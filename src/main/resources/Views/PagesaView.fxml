            <Label layoutX="182.0" layoutY="278.0" text="Shuma:" />
            <TextField fx:id="txtShuma" layoutX="239.0" layoutY="274.0" prefHeight="26.0" prefWidth="72.0" />

            <Button fx:id="ruajButton" layoutX="239.0" layoutY="320.0" mnemonicParsing="false" text="Ruaj" onAction="#handleRuaj" />
        </children>

    </AnchorPane>
  </children>
</VBox>
