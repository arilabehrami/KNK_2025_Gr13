<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0"
            style="-fx-background-color: #e6f4ea;"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/17.0.12"
            fx:controller="controllers.CreateGrupetController">

    <VBox alignment="TOP_CENTER" spacing="25.0"
          AnchorPane.leftAnchor="150.0"
          AnchorPane.rightAnchor="150.0"
          AnchorPane.topAnchor="40.0"
          AnchorPane.bottomAnchor="40.0"
          style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 4);">

        <Label text="Shto Grup të Ri"
               style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;" />

        <GridPane hgap="20.0" vgap="15.0">
            <columnConstraints>
                <ColumnConstraints minWidth="180.0" />
                <ColumnConstraints minWidth="350.0" />
            </columnConstraints>

            <Label text="Emri i Grupit:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                   style="-fx-font-size: 14px; -fx-text-fill: #444;" />
            <TextField fx:id="emriGrupitField" promptText="Shkruaj emrin e grupit"
                       GridPane.columnIndex="1" GridPane.rowIndex="0"
                       style="-fx-background-radius: 6;" />

            <Label text="Mosha Minimale:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                   style="-fx-font-size: 14px; -fx-text-fill: #444;" />
            <TextField fx:id="moshaMinField" promptText="Shkruaj moshën minimale"
                       GridPane.columnIndex="1" GridPane.rowIndex="1"
                       style="-fx-background-radius: 6;" />

            <Label text="Mosha Maksimale:" GridPane.columnIndex="0" GridPane.rowIndex="2"
                   style="-fx-font-size: 14px; -fx-text-fill: #444;" />
            <TextField fx:id="moshaMaxField" promptText="Shkruaj moshën maksimale"
                       GridPane.columnIndex="1" GridPane.rowIndex="2"
                       style="-fx-background-radius: 6;" />

            <Label text="Edukatori ID:" GridPane.columnIndex="0" GridPane.rowIndex="3"
                   style="-fx-font-size: 14px; -fx-text-fill: #444;" />
            <TextField fx:id="edukatoriIdField" promptText="Shkruaj ID e edukatorit"
                       GridPane.columnIndex="1" GridPane.rowIndex="3"
                       style="-fx-background-radius: 6;" />

            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>

        <HBox alignment="CENTER" spacing="20.0">
            <Button fx:id="ruajButton" onAction="#ruajGrupin" text="Ruaj"
                    style="-fx-background-color: #66bb6a; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 8 16;" />
            <Button fx:id="pastroButton" onAction="#pastroFushat" text="Pastro"
                    style="-fx-background-color: #ef5350; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 8 16;" />
        </HBox>
    </VBox>
</AnchorPane>
