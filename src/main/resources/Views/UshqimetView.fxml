<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.UshqimetController"
            prefHeight="500.0" prefWidth="680.0"
            style="-fx-background-color: #e8f5e9;">

    <children>
        <!-- Titulli -->
        <Label layoutX="30.0" layoutY="20.0" text="🍀 Ushqimet" style="-fx-text-fill: #2e7d32;">
            <font>
                <Font name="Arial" size="28.0" />
            </font>
        </Label>

        <!-- Tabela -->
        <TableView fx:id="ushqimetTable" layoutX="30.0" layoutY="70.0"
                   prefHeight="220.0" prefWidth="620.0"
                   style="-fx-background-color: white; -fx-border-color: #a5d6a7; -fx-border-radius: 5;">

            <columns>
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID"/>
                <TableColumn fx:id="emriColumn" prefWidth="130.0" text="Emri"/>
                <TableColumn fx:id="kategoriaColumn" prefWidth="130.0" text="Kategoria"/>
                <TableColumn fx:id="pershkrimiColumn" prefWidth="280.0" text="Përshkrimi"/>
            </columns>
        </TableView>

        <!-- Fushat dhe përshkrimet -->
        <Label layoutX="30.0" layoutY="310.0" text="Emri:" style="-fx-text-fill: #2e7d32;"/>
        <ComboBox fx:id="emriComboBox" layoutX="90.0" layoutY="305.0" prefWidth="160.0"/>

        <Label layoutX="270.0" layoutY="310.0" text="Kategoria:" style="-fx-text-fill: #2e7d32;"/>
        <ComboBox fx:id="kategoriaComboBox" layoutX="350.0" layoutY="305.0" prefWidth="160.0"/>

        <Label layoutX="30.0" layoutY="350.0" text="Përshkrimi:" style="-fx-text-fill: #2e7d32;"/>
        <ComboBox fx:id="pershkrimiComboBox" layoutX="110.0" layoutY="345.0" prefWidth="400.0"/>

        <!-- Butonat -->
        <Button fx:id="shtoButton" layoutX="110.0" layoutY="400.0" text="Shto"
                style="-fx-background-color: #66bb6a; -fx-text-fill: white; -fx-font-weight: bold;"
                onAction="#handleShto"/>

        <Button fx:id="fshijButton" layoutX="210.0" layoutY="400.0" text="Fshij"
                style="-fx-background-color: #ef5350; -fx-text-fill: white; -fx-font-weight: bold;"
                onAction="#handleFshij"/>

        <Button fx:id="pastroButton" layoutX="310.0" layoutY="400.0" text="Pastro"
                style="-fx-background-color: #42a5f5; -fx-text-fill: white; -fx-font-weight: bold;"
                onAction="#handlePastro"/>
    </children>
</AnchorPane>
