<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.UshqimetController"
            prefHeight="450.0" prefWidth="620.0"
            style="-fx-background-color: #f9f9f9">

    <children>
        <Label layoutX="30.0" layoutY="20.0" text="Ushqimet">
            <font>
                <Font size="30.0" />
            </font>
        </Label>

        <TableView fx:id="ushqimetTable" layoutX="30.0" layoutY="70.0" prefHeight="200.0" prefWidth="560.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="emriColumn" prefWidth="130.0" text="Emri" />
                <TableColumn fx:id="kategoriaColumn" prefWidth="130.0" text="Kategoria" />
                <TableColumn fx:id="pershkrimiColumn" prefWidth="250.0" text="Përshkrimi" />
            </columns>
        </TableView>

        <Label layoutX="30.0" layoutY="280.0" text="Emri:" />
        <ComboBox fx:id="emriComboBox" layoutX="90.0" layoutY="275.0" prefWidth="150.0" />

        <Label layoutX="250.0" layoutY="280.0" text="Kategoria:" />
        <ComboBox fx:id="kategoriaComboBox" layoutX="320.0" layoutY="275.0" prefWidth="150.0" />

        <Label layoutX="30.0" layoutY="320.0" text="Përshkrimi:" />
        <ComboBox fx:id="pershkrimiComboBox" layoutX="90.0" layoutY="315.0" prefWidth="380.0" />

        <Button fx:id="shtoButton" layoutX="110.0" layoutY="360.0" text="Shto" onAction="#handleShto" />
        <Button fx:id="fshijButton" layoutX="190.0" layoutY="360.0" text="Fshij" onAction="#handleFshij" />
        <Button fx:id="pastroButton" layoutX="270.0" layoutY="360.0" text="Pastro" onAction="#handlePastro" />

    </children>
</AnchorPane>

