<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.OrariController"
      spacing="10"
      style="-fx-background-color: linear-gradient(to bottom, #fbe9e7, #fff3e0);">

  <padding>
    <Insets top="10" right="10" bottom="10" left="10"/>
  </padding>

  <TableView fx:id="tableOrari" prefHeight="200">
    <columns>
      <TableColumn fx:id="colOrariID" text="ID" prefWidth="50"/>
      <TableColumn fx:id="colFemijaID" text="Femija ID" prefWidth="100"/>
      <TableColumn fx:id="colDita" text="Dita" prefWidth="100"/>
      <TableColumn fx:id="colOraHyrjes" text="Ora Hyrjes" prefWidth="120"/>
      <TableColumn fx:id="colOraDaljes" text="Ora Daljes" prefWidth="120"/>
    </columns>
  </TableView>

  <GridPane fx:id="gridPane" hgap="10" vgap="10">
    <Label fx:id="lblFemijaID"  text="Femija ID:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <TextField fx:id="tfFemijaID" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label fx:id="lblDita" text="Dita:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="tfDita" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label fx:id="lblOraHyrjes" text="Ora Hyrjes:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="tfOraHyrjes" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label fx:id="lblOraDaljes" text="Ora Daljes:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="tfOraDaljes" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
  </GridPane>

  <HBox spacing="10">
    <Button fx:id="btnAdd" text="Add" onAction="#addOrari"
            style="-fx-background-color: #66bb6a; -fx-text-fill: white; -fx-font-weight: bold;"/>
    <Button fx:id="btnUpdate" text="Update" onAction="#updateOrari"
            style="-fx-background-color: #42a5f5; -fx-text-fill: white; -fx-font-weight: bold;"/>
    <Button fx:id="btnDelete" text="Delete" onAction="#deleteOrari"
            style="-fx-background-color: #ef5350; -fx-text-fill: white; -fx-font-weight: bold;"/>
    <Button fx:id="btnClear" text="Clear" onAction="#clearForm"
            style="-fx-background-color: #9e9e9e; -fx-text-fill: white; -fx-font-weight: bold;"/>
  </HBox>

  <HBox spacing="10" alignment="CENTER_RIGHT">
    <Button fx:id="btnSwitchAlbanian" text="Shqip" onAction="#switchToAlbanian" style="..." />
    <Button fx:id="btnSwitchEnglish" text="English" onAction="#switchToEnglish" style="..." />
  </HBox>

</VBox>