<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.OrariController" prefWidth="640.0" prefHeight="400.0">
  <children>
    <MenuBar fx:id="menuBar">
      <menus>
        <Menu fx:id="fileMenu" text="%menu.file">
          <items>
            <MenuItem text="%menuitem.close"/>
          </items>
        </Menu>
        <Menu fx:id="editMenu" text="%menu.edit"/>
        <Menu fx:id="helpMenu" text="%menu.help">
          <items>
            <MenuItem text="%menuitem.about"/>
          </items>
        </Menu>
        <Menu fx:id="languageMenu" text="🌐">
          <items>
            <MenuItem fx:id="switchLanguageItem" text="EN / SQ" onAction="#onSwitchLanguage"/>
          </items>
        </Menu>
      </menus>
    </MenuBar>

    <AnchorPane VBox.vgrow="ALWAYS">
      <children>
        <TableView fx:id="orariTable" layoutX="20.0" layoutY="20.0" prefWidth="600" prefHeight="250">
          <columns>
            <TableColumn fx:id="ditaColumn" text="%column.dita" prefWidth="100"/>
            <TableColumn fx:id="oraHyrjesColumn" text="%column.oraHyrjes" prefWidth="150"/>
            <TableColumn fx:id="oraDaljesColumn" text="%column.oraDaljes" prefWidth="150"/>
            <TableColumn fx:id="femijaIdColumn" text="%column.femijaId" prefWidth="100"/>
          </columns>
        </TableView>
        <Button fx:id="backButton" layoutX="260.0" layoutY="290.0" text="%button.back"/>
      </children>
    </AnchorPane>
  </children>
</VBox>