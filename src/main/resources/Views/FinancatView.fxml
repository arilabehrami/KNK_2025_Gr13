<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="640.0"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.FinancaController"
     >

    <children>
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="%menu.file">
                    <items>
                        <MenuItem mnemonicParsing="false" text="%menu.file.new"/>
                        <MenuItem mnemonicParsing="false" text="%menu.file.open"/>
                        <Menu mnemonicParsing="false" text="%menu.file.recent"/>
                        <SeparatorMenuItem/>
                        <MenuItem mnemonicParsing="false" text="%menu.file.close"/>
                        <MenuItem mnemonicParsing="false" text="%menu.file.save"/>
                        <MenuItem mnemonicParsing="false" text="%menu.file.saveas"/>
                        <MenuItem mnemonicParsing="false" text="%menu.file.revert"/>
                        <SeparatorMenuItem/>
                        <MenuItem mnemonicParsing="false" text="%menu.file.preferences"/>
                        <SeparatorMenuItem/>
                        <MenuItem mnemonicParsing="false" text="%menu.file.quit"/>
                    </items>
                </Menu>

                <Menu mnemonicParsing="false" text="%menu.edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="%menu.edit.undo"/>
                        <MenuItem mnemonicParsing="false" text="%menu.edit.redo"/>
                        <SeparatorMenuItem/>
                        <MenuItem mnemonicParsing="false" text="%menu.edit.cut"/>
                        <MenuItem mnemonicParsing="false" text="%menu.edit.copy"/>
                        <MenuItem mnemonicParsing="false" text="%menu.edit.paste"/>
                        <MenuItem mnemonicParsing="false" text="%menu.edit.delete"/>
                        <SeparatorMenuItem/>
                        <MenuItem mnemonicParsing="false" text="%menu.edit.selectall"/>
                        <MenuItem mnemonicParsing="false" text="%menu.edit.unselectall"/>
                    </items>
                </Menu>

                <Menu mnemonicParsing="false" text="%menu.help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="%menu.help.about"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>

        <AnchorPane VBox.vgrow="ALWAYS">
            <children>
                <Label layoutX="46.0" layoutY="27.0" text="%label.financat" textFill="#9f9f9f">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>

                <Label layoutX="46.0" layoutY="72.0" text="%label.data"/>
                <Label layoutX="46.0" layoutY="104.0" text="%label.teArdhurat"/>
                <Label layoutX="46.0" layoutY="135.0" text="%label.shpenzimet"/>
                <Label layoutX="46.0" layoutY="169.0" text="%label.pershkrimi"/>

                <TextField fx:id="txtTeArdhura" layoutX="156.0" layoutY="100.0"/>
                <TextField fx:id="txtShpenzime" layoutX="156.0" layoutY="131.0"/>
                <TextArea fx:id="txtPershkrimi" layoutX="128.0" layoutY="171.0" prefHeight="104.0" prefWidth="177.0"/>
                <DatePicker fx:id="datePicker" layoutX="155.0" layoutY="67.0" prefHeight="26.0" prefWidth="178.0"/>

                <Button fx:id="btnRuaj" layoutX="155.0" layoutY="294.0" text="%button.ruaj"/>
                <Button fx:id="btnFshij" layoutX="244.0" layoutY="294.0" text="%button.fshij"/>
                <Button fx:id="btnKerko" layoutX="553.0" layoutY="63.0" text="%button.kerko"/>

                <Label layoutX="418.0" layoutY="67.0" text="%label.id"/>
                <TextField fx:id="txtId" layoutX="449.0" layoutY="63.0" prefHeight="26.0" prefWidth="98.0" promptText="%prompt.id"/>

                <TableView fx:id="tabelaFinancat" layoutX="350.0" layoutY="100.0" prefHeight="200.0" prefWidth="270.0">
                    <columns>
                        <TableColumn fx:id="colId" text="%column.id" prefWidth="50"/>
                        <TableColumn fx:id="colData" text="%column.data" prefWidth="80"/>
                        <TableColumn fx:id="colTeArdhura" text="%column.teArdhura" prefWidth="70"/>
                        <TableColumn fx:id="colShpenzime" text="%column.shpenzime" prefWidth="70"/>
                        <TableColumn fx:id="colPershkrimi" text="%column.pershkrimi" prefWidth="150"/>
                    </columns>
                </TableView>
            </children>
        </AnchorPane>
    </children>
</VBox>
