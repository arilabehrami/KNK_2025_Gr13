<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.MainController">

    <!-- TOP: Header -->
    <top>
        <HBox spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <ImageView fitHeight="40" fitWidth="40">
                <image>
                    <Image url="@../Images/Figura1.jpg" />
                </image>
            </ImageView>
            <Label text="Paneli Kryesor" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />
            <Pane HBox.hgrow="ALWAYS" />
            <Label fx:id="userLabel" text="Përdoruesi: Admin" style="-fx-text-fill: white; -fx-font-size: 14px;" />
            <Button fx:id="logoutBtn" text="Dil" styleClass="logout-button" />
        </HBox>
    </top>

    <!-- LEFT: Sidebar Navigation -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #34495e; -fx-padding: 15;">
            <Button text="Ballina" onAction="#loadHome" styleClass="nav-button" />
            <Button text="Fëmijët" onAction="#loadFemijet" styleClass="nav-button" />
            <Button text="Ushqimet" onAction="#loadUshqimet" styleClass="nav-button" />
            <Button text="Menyja Ditore" onAction="#loadMenyjaDitore" styleClass="nav-button" />
            <Button text="Prania" onAction="#loadPrania" styleClass="nav-button" />
            <Button text="Pagesat" onAction="#loadPagesa" styleClass="nav-button" />
            <Button text="Orari" onAction="#loadOrari" styleClass="nav-button" />
            <Button text="Sugjerimet" onAction="#loadSugjerimet" styleClass="nav-button" />
            <Button text="Donacionet" onAction="#loadDonacionet" styleClass="nav-button" />
            <Button text="Shënimet Shëndetësore" onAction="#loadShenimetShendetesore" styleClass="nav-button" />
            <Button text="Kontaktet Emergjente" onAction="#loadKontaktetEmergjente" styleClass="nav-button" />
            <Button text="Aktivitetet" onAction="#loadAktivitetet" styleClass="nav-button" />
        </VBox>
    </left>

    <!-- CENTER: Dynamic content -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: white; -fx-padding: 20;">
            <Label text="Mirësevini në panelin kryesor!" style="-fx-font-size: 24px; -fx-text-fill: #2c3e50;" />
        </StackPane>
    </center>

    <!-- BOTTOM: Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #2c3e50; -fx-padding: 8;">
            <Label text="© 2025 Kopshti Modern - Të gjitha të drejtat e rezervuara" style="-fx-text-fill: white; -fx-font-size: 12px;" />
        </HBox>
    </bottom>
</BorderPane>
