<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.LoginController"
            style="-fx-background-color: linear-gradient(to bottom, #fbe9e7, #fff3e0);">

  <top>
    <VBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
      <ImageView fitWidth="100" fitHeight="100">
        <image>
          <Image url="@../Images/Figura2.jpg" />
        </image>
      </ImageView>
      <Label text="MiniEdu - Kopshti i Ëndrrave"
             style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #e65100;" />
      <Label text="Një hapësirë kreative, edukative dhe e sigurt për fëmijët"
             style="-fx-font-size: 14px; -fx-text-fill: #6d4c41;" />
    </VBox>
  </top>

  <center>
    <VBox spacing="20" alignment="CENTER" prefWidth="420"
          style="-fx-background-color: #ffffff; -fx-padding: 35; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0.2, 0, 4);"
          BorderPane.alignment="CENTER">

      <Label text="Kyçu në Llogarinë Tënde"
             style="-fx-font-size: 22px; -fx-text-fill: #d84315; -fx-font-weight: bold;" />

      <HBox spacing="10" alignment="CENTER_LEFT">
        <ImageView fitWidth="20" fitHeight="20">
          <image>
            <Image url="@../Images/Figura2.jpg" />
          </image>
        </ImageView>
        <TextField fx:id="usernameField" promptText="Emri i përdoruesit"
                   style="-fx-background-radius: 10; -fx-border-color: #ffe0b2; -fx-border-radius: 10; -fx-padding: 10;" />
      </HBox>

      <HBox spacing="10" alignment="CENTER_LEFT">
        <ImageView fitWidth="20" fitHeight="20">
          <image>
            <Image url="@../Images/Figura2.jpg" />
          </image>
        </ImageView>
        <PasswordField fx:id="passwordField" promptText="Fjalëkalimi"
                       style="-fx-background-radius: 10; -fx-border-color: #ffe0b2; -fx-border-radius: 10; -fx-padding: 10;" />
      </HBox>

      <Label fx:id="errorLabel" textFill="red" visible="false"
             style="-fx-font-size: 12px;" />

      <HBox spacing="20" alignment="CENTER">
        <Button fx:id="loginButton" text="Kyçu" onAction="#handleLogin"
                style="-fx-background-color: #ff7043; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 10 25;" />

        <Button fx:id="signupButton" text="Regjistrohu" onAction="#goToSignUp"
                style="-fx-background-color: transparent; -fx-border-color: #ff7043; -fx-text-fill: #ff7043; -fx-border-radius: 12; -fx-padding: 10 25;" />
      </HBox>


      <Hyperlink text="Ke harruar fjalëkalimin?" onAction="#forgotPassword"
                 style="-fx-text-fill: #bf360c; -fx-font-size: 11px;" />
    </VBox>
  </center>

  <right>
    <VBox spacing="16" alignment="TOP_LEFT" BorderPane.alignment="CENTER_RIGHT"
          style="-fx-background-color: #fff3e0; -fx-background-radius: 0 20 20 0;">
      <padding>
        <Insets top="30" right="30" bottom="30" left="30" />
      </padding>

      <Label text="Çfarë Ofron MiniEdu?"
             style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #e64a19;" />

      <VBox spacing="12">
        <HBox spacing="10" alignment="CENTER_LEFT">
          <Label text="👶" style="-fx-font-size: 16px;" />
          <Label text="Menaxhim i fëmijëve" style="-fx-font-size: 14px; -fx-text-fill: #5d4037;" />
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
          <Label text="🕒" style="-fx-font-size: 16px;" />
          <Label text="Orari dhe aktivitetet ditore" style="-fx-font-size: 14px; -fx-text-fill: #5d4037;" />
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
          <Label text="📞" style="-fx-font-size: 16px;" />
          <Label text="Komunikim me prindërit" style="-fx-font-size: 14px; -fx-text-fill: #5d4037;" />
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
          <Label text="📝" style="-fx-font-size: 16px;" />
          <Label text="Regjistrim dhe frekuentim" style="-fx-font-size: 14px; -fx-text-fill: #5d4037;" />
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
          <Label text="🍎" style="-fx-font-size: 16px;" />
          <Label text="Kujdes shëndetësor dhe dieta" style="-fx-font-size: 14px; -fx-text-fill: #5d4037;" />
        </HBox>
      </VBox>
    </VBox>
  </right>


  <bottom>
    <VBox alignment="CENTER" spacing="5" BorderPane.alignment="CENTER">
      <Separator />
      <Label text="© 2025 MiniEdu | info@miniedu.com | +383 45 123 456"
             style="-fx-font-size: 10px; -fx-text-fill: #a1887f;" />
    </VBox>
  </bottom>

</BorderPane>